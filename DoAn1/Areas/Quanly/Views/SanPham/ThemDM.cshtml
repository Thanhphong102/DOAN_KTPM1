@model DoAn1.Areas.Quanly.Data.DANHMUC
@{
    ViewBag.Title = "Them Danh muc";
    Layout = "~/Areas/Quanly/Views/Shared/_Layout.cshtml";
}
<form action="@Url.Action("ThemDM","SanPham")" method="post">
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h1> THÊM DANH MỤC </h1>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2"> Mã danh mục </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MaDM, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaDM, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Tên danh mục </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenDM, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenDM, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2"> Nội dung mô tả danh mục </label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.MotaDM, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MotaDM, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
            @Html.ActionLink("Thoát", "Index")
        </div>
    </div>
</form>
<div>
   
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

