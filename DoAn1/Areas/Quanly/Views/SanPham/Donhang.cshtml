@model IEnumerable<DoAn1.Areas.Quanly.Data.DONHANG>
@{
    ViewBag.Title = "Đơn hàng";
    Layout = "~/Areas/Quanly/Views/Shared/_Layout.cshtml";
}


<div class="page-header">
    <h1 class="page-title">Quản lý đơn hàng</h1>
</div>

<!-- Order Stats -->
<div class="order-stats">
    <div class="stat-card">
        <div class="stat-title">Tổng đơn hàng</div>
        <div class="stat-value">245</div>
    </div>
    <div class="stat-card">
        <div class="stat-title">Chờ xử lý</div>
        <div class="stat-value">18</div>
    </div>
    <div class="stat-card">
        <div class="stat-title">Đang giao</div>
        <div class="stat-value">35</div>
    </div>
    <div class="stat-card">
        <div class="stat-title">Hoàn thành</div>
        <div class="stat-value">192</div>
    </div>
</div>

<!-- Search and Filter -->
<div class="search-filter">
    <input type="text" class="search-input" placeholder="Tìm kiếm đơn hàng...">
    <select class="filter-select">
        <option value="">Trạng thái</option>
        <option value="pending">Chờ xử lý</option>
        <option value="processing">Đang xử lý</option>
        <option value="completed">Hoàn thành</option>
        <option value="cancelled">Đã hủy</option>
    </select>
    <select class="filter-select">
        <option value="">Thời gian</option>
        <option value="today">Hôm nay</option>
        <option value="week">Tuần này</option>
        <option value="month">Tháng này</option>
    </select>
    <button class="search-btn">Tìm kiếm</button>
</div>

<!-- Orders Table -->
<div class="orders-table">
    <table class="table">
        <thead>
            <tr>
                <th>Mã đơn</th>
                <th>Khách hàng</th>
                <th>Ngày đặt</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th>Thanh toán</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model) 
            { 
             <tr>
                 <td>@Html.DisplayFor(modelItem => item.MaDH)</td>
                 <td>@Html.DisplayFor(modelItem => item.KHACHHANG.TenKH)</td>
                 <td>@Html.DisplayFor(modelItem => item.TGDathang)</td>
                 <td>@Html.DisplayFor(modelItem => item.Tongthanhtoan)</td>
                 <td>@Html.DisplayFor(modelItem => item.Trangthai)</td>
                 <td>
                     <button class="btn btn-view"><a href="~/QuanlySP/Home/Chitiet">Xem</a></button>
                     <button class="btn btn-edit">Sửa</button>
                     <button class="btn btn-delete">Xóa</button>
         </td>
     </tr>
