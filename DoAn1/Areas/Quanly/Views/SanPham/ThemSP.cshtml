@model DoAn1.Areas.Quanly.Data.SANPHAM

@{
    ViewBag.Title = "ThemSanpham";
    Layout = "~/Areas/Quanly/Views/Shared/_Layout.cshtml";
}
<form action="@Url.Action("ThemSP","SanPham")" method="post">
    @Html.AntiForgeryToken()
    <h2>Thêm Sản phẩm</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2"> Mã sản phẩm </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.MaSP, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MaSP, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Tên sản phẩm </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenSP, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenSP, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Danh mục </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.MaDM, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MaDM, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Giá </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.GiaSP, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GiaSP, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2"> Tồn kho </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SoluongtonSP, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SoluongtonSP, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2"> Trạng thái </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TrangthaiSP, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TrangthaiSP, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm sản phẩm" class="btn btn-default" />
        </div>
    </div>
</div>
    }
</form>
    <div>
        @Html.ActionLink("Thoát", "Index")
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

